import pandas as pd


def calculate_statistics():
    """
    Reads the specified CSV file and calculates statistics
    for the chosen column.
    """

    # ✅ Your actual file path (Windows raw string format)
    csv_file = r"C:\Users\Harika\OneDrive\Attachments\APPLIED DATA SCIENCE\Harika dataset.csv"

    # ✅ CHANGE THIS to your real column name from the dataset
    column_name = "value"   # Example: "Age" or "Sales"

    # Load dataset
    df = pd.read_csv(csv_file)

    # Check if column exists
    if column_name not in df.columns:
        raise ValueError(f"Column '{column_name}' not found in CSV file.")

    column = df[column_name].dropna()

    # Calculate statistics
    mean = column.mean()
    median = column.median()
    std_dev = column.std()
    minimum = column.min()
    maximum = column.max()

    print("Statistics Summary:")
    print("Mean:", mean)
    print("Median:", median)
    print("Standard Deviation:", std_dev)
    print("Minimum:", minimum)
    print("Maximum:", maximum)


if __name__ == "__main__":
    calculate_statistics()
